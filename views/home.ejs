<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: "Courier New",sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>home page</title>
</head>
<body class="p-2 m-2">
    <h1>TinyLinker</h1>
    <% if (locals.id) { %>
     <p>URL Generated: http://localhost:8001/url/<%= id %></p>
    <% } %>
    <div class="m-2">
        <form class="col-auto" method="post" action="/url">
            <!-- <label class="form-label">Enter Your Original URL</label>
            <input class="p-2 m-2" type="text" name="url" placeholder="https://example.com"/> -->
            <div class="mb-3 col">
                <label for="basic-url" class="form-label">Enter Your Original URL</label>
                <div class="input-group col">
                  <span class="input-group-text" id="basic-addon3">https://example.com/</span>
                  <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4" type="text" name="url" >
                </div>
            </div>
            <button type="submit button" class="btn btn-success">Generate</button>
        </form>
    </div>
    <br>
    <div class="m-2">
        <% if (locals.urls) { %>
         <table class="table table-striped table-hover">
            <thead class="table-dark">
                <th>S. no.</th>
                <th>ShortId</th>
                <th>Redirect</th>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                       <td><%= index+1 %></td>
                       <td class="h6"><%= url.shortId %></td>
                       <td><%= url.redirectURL %></td>
                    </tr>
                   <% }) %>
            </tbody>
         </table>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>